<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:background="@color/themecolor" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="快客洗涤"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" 
            android:textSize="@dimen/head_font_size_sm"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" 
             android:background="@color/greencolor"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/lightyellow" >
                <android.support.v4.view.ViewPager  
			        android:id="@+id/home_ad_image"  
			        android:layout_width="match_parent"  
			        android:layout_height="200dp"  
			        android:layout_gravity="center"
			      
			        android:background="@color/white"
			        android:flipInterval="30"
                      android:persistentDrawingCache="animation" >  
			    </android.support.v4.view.ViewPager>  
					<RelativeLayout    
				        android:layout_width="fill_parent"    
				        android:layout_height="wrap_content"   
				        android:orientation="vertical" >    
				    
				        <LinearLayout    
				            android:id="@+id/home_ad_image_group"    
				            android:layout_width="fill_parent"    
				            android:layout_height="wrap_content"    
				            android:layout_alignParentBottom="true"   
				            android:layout_marginBottom="30dp"    
				            android:gravity="center_horizontal"    
				            android:orientation="horizontal" >    
				        </LinearLayout>    
				    </RelativeLayout>
    
            </LinearLayout>
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
   
                android:background="@color/themecolor">

           <cn.fuego.misp.ui.base.MispGridView
		        android:id="@+id/home_gridview"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:horizontalSpacing="10dp"
		        android:numColumns="4"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:verticalSpacing="10dp" />
                
            </LinearLayout>
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
 >

                <Button
                    android:id="@+id/home_btn_join_invest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_join_invest"
                    android:textSize="@dimen/content_font_size" />
                
                
            </LinearLayout>
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/home_btn_service_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_service_phone"
                    android:textSize="@dimen/content_font_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/home_btn_direct_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_direct_order"
                    android:textSize="@dimen/content_font_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
        



</LinearLayout>