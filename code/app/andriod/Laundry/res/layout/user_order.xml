<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_head_height"
        android:layout_marginBottom="2dp"
        android:background="@color/white" >

        <Button
            android:id="@+id/user_register_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/detail_back"
            android:drawablePadding="5dp"
            android:focusableInTouchMode="true"
            android:text="返回"
            android:textColor="@color/themecolor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的订单"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/my_order_radio_group"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/user_order_radio_buy"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_btn"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="已订购"
                android:textColor="@drawable/nav_text_color" />

            <RadioButton
                android:id="@+id/user_order_radio_use"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_btn"
                android:button="@null"
                android:gravity="center"
                android:text="已使用"
                android:textColor="@drawable/nav_text_color" />

            <RadioButton
                android:id="@+id/user_order_radio_cancel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_btn"
                android:button="@null"
                android:gravity="center"
                android:text="已取消"
                android:textColor="@drawable/nav_text_color" />

            <RadioButton
                android:id="@+id/user_order_radio_past"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/nav_btn"
                android:button="@null"
                android:gravity="center"
                android:text="已过期"
                android:textColor="@drawable/nav_text_color" />
        </RadioGroup>

    </LinearLayout>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >
    </ListView>

</LinearLayout>
