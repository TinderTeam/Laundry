<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black" >

            <TextView
                android:id="@+id/chart_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="0.8"
                android:background="@color/grid_back_color"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="一堆衣服"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/chart_list_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="@color/grid_back_color"
                android:gravity="center"
                android:padding="8dp"
                android:text="260元"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="@color/grid_back_color"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/chart_list_item_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
 
                    android:layout_margin="2dp"
                    android:background="@drawable/edittext_sel"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    android:textSize="12sp" >

                    <requestFocus />
                </EditText>

            </LinearLayout>

            <TextView
                android:id="@+id/chart_list_item_tatol_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="@color/grid_back_color"
                android:gravity="center"
                android:padding="8dp"
                android:text="260元"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:background="@color/grid_back_color"
                android:gravity="center"
                android:orientation="vertical" >

            <Button
                android:id="@+id/char_list_item_btn_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
      
                android:background="@drawable/cancel"
                android:gravity="center"
 
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/grid_back_color"
                android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
</RelativeLayout>